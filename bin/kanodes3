#!/usr/bin/ruby -w

$kadeploy_libs=ENV['KADEPLOY3_LIBS']||'/usr/local/kadeploy3/src/lib'

$:.unshift($kadeploy_libs)

require 'optparse'
require 'yaml'
require 'client'

Signal.trap("INT") do
  $stdout.puts "\nSIGINT trapped"
  Kadeploy::KanodesClient.kill() rescue nil
  exit!(1)
end

module Kadeploy

class KanodesClient < Client
  def self.operation()
    'Nodes statistics'
  end

  def self.load_options()
    global_load_options().merge(
      {
        :operation => nil,
        :user => nil,
        :wid => nil,
      }
    )
  end

  def self.parse_options()
    global_parse_options() do |opt,options|
      opt.separator "General options:"
      opt.on("-s", "--get-nodes-state", "Get the deployment state of the nodes") {
        options[:operation] = :get_state
      }
      opt.on("-d", "--get-deployments-status", "Get the status of running deployments") {
        options[:operation] = :get_status_deploy
      }
      opt.on("-r", "--get-reboots-status", "Get the status of running reboot operations") {
        options[:operation] = :get_status_reboot
      }
      opt.on("-p", "--get-powers-status", "Get the status of running power operations") {
        options[:operation] = :get_status_power
      }
      parse_machinefile(opt,options)
      parse_machine(opt,options)
      opt.on("-w", "--workflow-id WID", "Specify a workflow id (to be used with the get_status option). If no wid is specified, the information of all the running deployments will be returned.") { |w|
        options[:wid] = w
      }
    end
  end

  def self.check_options(options)
    unless [:get_state,:get_status_deploy,:get_status_reboot,:get_status_power].include?(options[:operation])
      error("You must choose an operation")
      return false
    end

    case options[:operation]
    when :get_status_deploy,:get_status_reboot,:get_status_power
      if !options[:nodes].empty?
        error('Node list is useless when gathering deployment statuses')
        return false
      end
    when :get_state
      if options[:wid]
        error('Workflow ID is useless when gathering node\'s deployment states')
        return false
      end
    end
    true
  end

  def run(options)
    params = init_params(options)

    path = nil

    case options[:operation]
    when :get_state
      path = api_path()
      params[:nodes] = nodes() if nodes()
    when :get_status_deploy
      path = api_path(options[:wid],:deploy)
    when :get_status_reboot
      path = api_path(options[:wid],:reboot)
    when :get_status_power
      path = api_path(options[:wid],:power)
    else
      raise
    end

    get(path,params,:yaml,false)
  end

  def result(options,ret)
    debug ret if ret
  end
end

end

if __FILE__ == $0
  Kadeploy::KanodesClient.launch()
end
