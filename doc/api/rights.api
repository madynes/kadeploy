operation 'Rights management' do
  resource :POST, '/rights', 'Add permessions to a specific user on some node\'s partitions' do
    request do
      parameter :username, :String, 'The name of the user the rights should be granted. Defaults to "user"', false
      parameter :nodes, :Array, 'The list of nodes the rights should be added to. If not specified, rights will be added on all the nodes', false
      parameter :partitions, :Array, 'The partitions/disks the rights should be added to. If the array contains *, rights will be added on every partition/disk', false
      parameter :overwrite, :Boolean, 'Overwrite if some rights are already set for this user', false
    end

    response do
      field 'username', :Hash, 'The rights that was added for the user "username"' do
        field 'nodename', :Array, 'The rights that was added on the node "nodename". If "nodename" is *, the rights was added on every nodes' do
          field '#i', :String, 'The partition the rights was added to'
        end
      end
      code [400,11], 'Some elements of the request are conflicting'
      code [400,12], 'No element has been modified'
    end

    example \
    <<-EOS ,
      POST /rights HTTP/1.1
      Accept: text/plain, application/json
      Host: kadeploy.testbed.lan:25300
      Content-Type: application/json
      Content-Length: 89
      {
        "user" : "root",
        "username": "frontend",
        "nodes": [
          "node-1.testbed.lan"
        ]
      }
    EOS
    <<-EOS
      HTTP/1.1 200 OK
      Content-Type: application/json
      Content-Length: 67
      {
        "frontend": {
          "node-1.testbed.lan": [
            "*"
          ]
        }
      }
    EOS

    example \
    <<-EOS ,
      POST /rights?user=root&overwrite HTTP/1.1
      Accept: text/plain, application/json
      Host: kadeploy.testbed.lan:25300
      Content-Type: application/json
      Content-Length: 136
      {
        "username": "frontend",
        "nodes": [
          "node-1.testbed.lan",
          "node-2.testbed.lan"
        ],
        "partitions": [
          "/dev/sda3"
        ]
      }
    EOS
    <<-EOS
      HTTP/1.1 200 OK
      Content-Type: application/json
      Content-Length: 128
      {
        "frontend": {
          "node-1.testbed.lan": [
            "/dev/sda3"
          ],
          "node-2.testbed.lan": [
            "/dev/sda3"
          ]
        }
      }
    EOS
  end

  resource :GET, '/rights/:username?/:node?', 'Gather information about someone\'s permission on nodes' do
    request do
      parameter ':username', :String, 'The name of the user to check the rights for. If not specified, returns the rights of every users', false
      parameter ':node', :String, 'The node to check the rights on', false
      parameter :nodes, :Array, 'The list of nodes the rights should be checked on. If nor "node" or "nodes" are specified, rights of all the nodes will be returned. If both "node" and "nodes" are specified, the rights of [nodes]+node will be returned', false
    end

    response do
      field 'username', :Hash, 'The rights of the user "username"' do
        field 'nodename', :Array, 'The rights on the node "nodename". All the nodes if "nodename" is *' do
          field '#i', :String, 'The partition the rights are set on'
        end
      end
    end

    example \
    <<-EOS ,
      GET /rights?user=root HTTP/1.1
      Accept: text/plain, application/json
      Host: kadeploy.testbed.lan:25300
    EOS
    <<-EOS
      HTTP/1.1 200 OK
      Content-Type: application/json
      Content-Length: 172
      {
        "root": {
          "*": [
            "*"
          ]
        },
        "frontend": {
          "node-1.testbed.lan": [
            "/dev/sda3"
          ],
          "node-2.testbed.lan": [
            "/dev/sda3"
          ]
        }
      }
    EOS

    example \
